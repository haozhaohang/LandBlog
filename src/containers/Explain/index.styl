.explain-wrapper {
    max-width: 960px;
    min-width: 750px;
    margin: 0 auto;
    color: #333;

    .portion {
        border-bottom: 1px solid #ddd;
        padding-bottom: 25px;
    }

    .te-portion {
        margin-top: 30px;
    }

    .copyright {
        width: 100%;
        text-align: center;
    }

    h1 {
        border-left: 5px solid rgba(0,0,0,0.05);
        padding: 10px 20px;
        font-size: 24px;
        font-weight: 600;
        padding-bottom: 15px;
    }

    h2 {
        padding: 10px 20px;
        font-size: 18px;
        font-weight: 500;
    }

    ol, ul {
        padding-left: 40px;

        &>li {
            list-style: disc
        }
    }

    p {
        margin: 15px 0;

    }
}