.tag-cloud-wrapper {
    padding: 5px;
    background: #fff;

    .title {
        height: 30px;
        margin: 0 auto;
        border-bottom: 2px solid #ccc;
        h3 {
            display: inline-block;
            font-size: 16px;
            color: #000;
            line-height: 28px;
            text-indent: 2px;
            border-bottom: 2px solid #39c;
            font-weight: 400;
            a {
                color: #000;
                &:hover {
                    color: #39c;
                }
            }
        }
        span {
            display: inline-block;
            font-size: 10px;
            text-indent: 6px;
            color: #adadad;
        }
    }

    .list {
        margin-top: 10px;
        a {
            display: inline-block;
            height: 20px;
            margin: 0 5px 5px 0;
            padding: 0 5px;
            line-height: 20px;
            color: #999;
            background: #f3f3f3;
            white-space: nowrap;
            font-weight: 400;
            transition: all .2s ease-in-out;
            &:hover {
                color: #fff;
                background: #39c;
            }
        }
    }
}
