.main-wrapper {
    .article {
        width: 100%;
        display: inline-block;
        margin-top: 10px;
        background: #e7e7e7;

        .containers {
            padding: 25px 20px;
            margin: 3px;
            border: 1px solid #ccc;
            background: #fff;

            header {
                h1 {
                    font-size: 18px;
                    font-weight: 400;
                    color: #333;
                }
            }

            .meta-list {
                margin-top: 10px;

                .meta-item {
                    display: inline-block;
                    height: 24px;
                    margin-right: 20px;
                    line-height: 24px;
                    font-size: 12px;
                    color: #666;
                }
            }

            .main-content {
                margin-top: 20px;

                h2 {
                    border-left: 4px solid #b9d329;
                    margin: 20px -19px 10px;
                    padding: 10px 15px;
                    font-size: 16px;
                    color: #222;
                    background: #fdfdfd;
                }

                h3 {
                    margin: 20px auto 10px;
                    font-weight: 700;
                    font-size: 15px;
                    color: #444;
                    &:before {
                        content: 'â– ';
                        position: relative;
                        top: -2px;
                        color: #39c;
                        margin-right: 5px;
                    }
                }

                p {
                    margin: 5px 0;
                    word-wrap: break-word;
                    text-indent: 2em;
                    line-height: 20px;
                    font-size: 14px;
                }

                img {
                    max-width: 775px;
                }

                ol, ul {
                    text-indent: 2em;
                    overflow: hidden;
                    margin-bottom: 15px;
                }
            }
        }
    }
}
