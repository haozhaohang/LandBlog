.search-wrapper {
    height: 32px;
    border: 2px solid #bdc3c7;

    form {
        display: flex;

        .text {
            flex: 1;
            height: 28px;
            padding: 2px 4px;
            line-height: 28px;
            color: #333;
            background: #fff;
            outline: 0;
            border: 0;
        }

        .btn {
            width: 52px;
            height: 28px;
            cursor: pointer;
            color: #fff;
            background-color: #bdc3c7;
            outline: 0;
            border: 0;
            transition: all .2s ease;
        }
    }
}
