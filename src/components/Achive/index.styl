.achive-wrapper {
    position: relative;
    padding: 5px;
    background-color: #fff;
    ul {
        margin-top: 3px;
        li {
            display: flex;
            align-items: center;
            height: 28px;
            padding: 0 2px;
            border-bottom: 1px solid #ececec;
            border-top: 1px solid #fff;
            background: #f7f7f7;
            transition: all .3s ease-in-out;
            a {
                flex: 1;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
                line-height: 26px;
                color: #39c;
                font-size: 14px;
                transition: all .3s ease-in-out;
                text-indent: 5px;
            }
            span {
                color: #ccc;
            }
            b {
                width: 18px;
                height: 18px;
                border-radius: 50%;
                font-size: 12px;
                border: 2px solid #ccc;
                text-align: center;
                line-height: 14px;
                color: #ccc;
                vertical-align: super;
            }
        }
    }

    .achive-title {
        height: 32px;
        h3 {
            float: left;
            width: 95px;
            height: 28px;
            margin-right: 1px;
            line-height: 28px;
            font-size: 14px;
            text-align: center;
            cursor: pointer;
            background: #f1f1ef;
            transition: .2s;
        }
        .achive-action {
            background: #39f;
            color: #fff;
        }
    }
}